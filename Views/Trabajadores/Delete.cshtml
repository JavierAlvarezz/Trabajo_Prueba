@model WebApplication26.Models.Trabajadore

@{
    ViewData["Title"] = "Delete";
}
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f5f5f5;
    }

    .container {
        margin-top: 50px;
    }

    h1 {
        text-align: center;
        color: #333;
    }

    .delete-container {
        max-width: 600px;
        margin: 0 auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .confirm-text {
        font-size: 18px;
        color: #333;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: #fff;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        color: #fff;
    }
</style>
<h1>Borrar</h1>

<h3>¿Estas Seguro de que quieres eliminar este Registro ?</h3>
<div>
   
    <hr />
    <dl class="container delete-container">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoDocumento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoDocumento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroDocumento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumeroDocumento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombres)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombres)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sexo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sexo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdDepartamentoNavigation.NombreDepartamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdDepartamentoNavigation.NombreDepartamento)

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdProvinciaNavigation.NombreProvincia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdProvinciaNavigation.NombreProvincia)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdDistritoNavigation.NombreDistrito)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdDistritoNavigation.NombreDistrito)
        </dd>

        
    </dl>
    
    <form asp-action="Delete" onsubmit="return confirm('¿Estás seguro de que deseas borrar esto?');" class="text-center">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-success">Cancelar</a>
    </form>
    
</div>
