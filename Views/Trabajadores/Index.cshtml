@model IEnumerable<WebApplication26.Models.Trabajadore>

@{
    ViewData["Title"] = "Index";
}
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-image: url('https://3.bp.blogspot.com/-FeD7a-kggaQ/VrwZhDnJPKI/AAAAAAAACpc/93QTwnhggYc/s1600/dasboard.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        
    }

    .container {
        margin-top: 50px;
    }

    h1 {
        text-align: center;
        color: #333;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }

        .table th, .table td {
            border: 1px solid #e0e0e0;
            padding: 12px;
            text-align: left;
        }

        .table th {
            background-color: #007bff;
            color: #fff;
        }



        .btn:hover {
            background-color: #0056b3;
            border-color: #0056b3;
            color: #fff;
        }

</style>
<body>

<link rel="stylesheet" href="~/css/Index.css" />
<h1>Listado de Trabajadores</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo Registro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Tipo de Documento
            </th>
            <th>
                Número de Documento
            </th>
            <th>
                Nombres
            </th>
            <th>
                Sexo
            </th>
            <th>
                Departamento
            </th>
            <th>
                Distrito
            </th>
            <th>
                Provincia
            </th>
            <th>
                Accion
            </th>
          
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoDocumento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroDocumento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sexo)
                </td>
                <td>
                    @if (item.IdDepartamentoNavigation != null)
                    {
                        @Html.DisplayFor(modelItem => item.IdDepartamentoNavigation.NombreDepartamento)
                    }
                </td>
                <td>
                    @if (item.IdDistritoNavigation != null)
                    {
                        @Html.DisplayFor(modelItem => item.IdDistritoNavigation.NombreDistrito)
                    }
                </td>
                <td>
                    @if (item.IdProvinciaNavigation != null)
                    {
                        @Html.DisplayFor(modelItem => item.IdProvinciaNavigation.NombreProvincia)
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</body>